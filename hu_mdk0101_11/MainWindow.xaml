        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hu_mdk0101_11"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Фильмы:" HorizontalAlignment="Left" Margin="360,60,0,0" VerticalAlignment="Top" Click="film_click"/>
        <TextBox x:Name="Filmstextbox" HorizontalAlignment="Center" Margin="0,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Показать список фильмов" HorizontalAlignment="Center" Margin="0,147,0,0" VerticalAlignment="Top" Click="showfilms_click"/>
        <TextBox x:Name="directfilmtextbox" HorizontalAlignment="Center" TextWrapping="Wrap"  VerticalAlignment="Center" Width="120"/>


    </Grid>
</Window>
